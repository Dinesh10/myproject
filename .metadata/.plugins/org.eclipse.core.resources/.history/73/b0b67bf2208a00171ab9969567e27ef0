   <?php
			// LOOP
			// while
			// do while
			// for
			// for each
			echo "<h1 align='center'>LOOP</h1>";
			$g = 1;
			while ( $g <= 10 ) {
				echo "</br>while : $g";
				$g ++;
			}
			
			echo "</br>";
			
			$g = 2;
			do {
				echo "</br>Do while : $g";
				$g = $g + 5;
			} while ( $g <= 20 );
			
			echo "</br>";
			
			for($g = 0; $g <= 10; $g ++) {
				echo "</br>for loop : $g";
			}
			
			echo "</br>";
			
			$gin= array("itag","din","rio","mani","srini","deep");
			foreach ($gin as $a)
			{
				echo "</br>for each : $a";
			}
			?>
